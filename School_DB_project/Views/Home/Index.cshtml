<div class="container mt-5">
    <div class="row justify-content-center">
        <!-- البطاقة الأولى: القاعات -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-lg">
                <div class="card-header bg-primary text-white text-center">
                    <h2>القاعات الدراسية</h2> <!-- تكبير العنوان -->
                </div>
                <div class="card-body text-center">
                    <p style="font-size: 1.2rem;">هنا يمكنك الاطلاع على القاعات وطلاب  يلي فيها و الاختبارات يلي فيها .</p> <!-- تكبير النص -->
                    @Html.ActionLink("عرض القاعات", "Index", "Classes", new { area = "" }, new { @class = "btn btn-primary btn-lg" })
                </div>
            </div>
        </div>

        <!-- البطاقة الثانية: المواد الدراسية -->
        <div class="col-md-5 mb-4">
            <div class="card shadow-lg">
                <div class="card-header bg-success text-white text-center">
                    <h2>المواد الدراسية</h2> <!-- تكبير العنوان -->
                </div>
                <div class="card-body text-center">
                    <p style="font-size: 1.2rem;">اضغط على الزر أدناه لعرض جميع المواد الدراسية.</p> <!-- تكبير النص -->
                    @Html.ActionLink("عرض المواد", "Index", "Courses", new { area = "" }, new { @class = "btn btn-success btn-lg" })

                </div>
            </div>
        </div>
    </div>
</div>


<!-- تضمين ملفات Bootstrap JavaScript -->
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
}
