@model School_DB_project.Models.LoginViewModel

@{
    ViewBag.Title = "تسجيل الدخول";
    Layout = "";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-primary text-white text-center py-3">
                    <h4 class="mb-0">تسجيل الدخول</h4>
                </div>
                <div class="card-body p-4">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

                        <!-- Username field -->
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.Name, "اسم المستخدم", htmlAttributes: new { @class = "form-label" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-user"></i></span>
                                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل اسم المستخدم" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                        </div>

                        <!-- Password field -->
                        <div class="form-group mb-4">
                            @Html.LabelFor(model => model.Password, "كلمة المرور", htmlAttributes: new { @class = "form-label" })
                            <div class="input-group">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @placeholder = "أدخل كلمة المرور" } })
                            </div>
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>

                        <!-- Submit button -->
                        <div class="d-grid mb-3">
                            <button type="submit" class="btn btn-primary btn-lg">تسجيل الدخول</button>
                        </div>
                    }

                    <div class="text-center">
                        <a href="@Url.Action("Register", "Account")" class="text-decoration-none">ليس لدي حساب؟ تسجيل حساب جديد</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
@Scripts.Render("~/bundles/jqueryval")
